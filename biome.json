{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [".next", ".vercel", ".vscode", "dist", "node_modules", "build", "public/*", ".DS_Store"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"formatWithErrors": true,
		"bracketSpacing": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useFocusableInteractive": "info",
				"useSemanticElements": "info",
				"noRedundantRoles": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn",
				"noDangerouslySetInnerHtmlWithChildren": "warn"
			}
		},
		"ignore": [
			".next",
			".vercel",
			"dist",
			"node_modules",
			"build",
			"public/*",
			".DS_Store",
			"*.css",
			"*.config.js",
			"*.config.ts"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"arrowParentheses": "always",
			"attributePosition": "multiline"
		}
	}
}
