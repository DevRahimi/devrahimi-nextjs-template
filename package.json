{
  "name": "devrahimi-nextjs-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.x",
    "bun": "1.x",
    "npm": "please-use-bun"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "bun run format && FORCE_COLOR=1 next build --debug",
    "start": "next start --port 3001",
    "lint": "bun run format && FORCE_COLOR=1 next lint --config .eslintrc.json",
    "lint-fix": "bun run format && FORCE_COLOR=1 next lint --config .eslintrc.json --fix",
    "format": "prettier . --write --config-precedence prefer-file .prettierrc.json",
    "check-format": "prettier . --check --config-precedence prefer-file .prettierrc.json",
    "prepare": "husky",
    "info": "next info"
  },
  "dependencies": {
    "next": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  }
}
