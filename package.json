{
  "name": "devrahimi-nextjs-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x",
    "bun": "1.x",
    "npm": "please-use-bun"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "bun run format && FORCE_COLOR=1 next build --debug",
    "start": "next start --port 3001",
    "lint": "FORCE_COLOR=1 next lint --max-warnings=0 --config eslint.config.mjs",
    "lint-fix": "FORCE_COLOR=1 next lint --max-warnings=0 --config eslint.config.mjs --fix",
    "format": "prettier . --write --config-precedence prefer-file prettier.config.mjs",
    "format:check": "prettier . --check --config-precedence prefer-file prettier.config.mjs",
    "prepare": "husky",
    "info": "next info"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3.2.0",
    "@tailwindcss/postcss": "^4.0.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.17.16",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.19.0",
    "eslint-config-next": "15.1.6",
    "husky": "^9.1.7",
    "postcss": "^8.5.1",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.2",
    "typescript": "^5.7.3"
  }
}
